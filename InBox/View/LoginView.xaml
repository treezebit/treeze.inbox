<?xml version="1.0" encoding="UTF-8"?>
<local:LoginView 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="InBox.LoginView"
	xmlns:local="clr-namespace:InBox;assembly=LoginViewModel">

	<ContentPage.Padding>
        <OnPlatform 
            x:TypeArguments="Thickness" 
            iOS="5,20,5,5" 
            Android="5,0,5,5" 
            WinPhone="5,0,5,5" />
    </ContentPage.Padding>

	<StackLayout>
		<Entry Text="{ Binding Usuario, Mode=TwoWay }" Placeholder="Usuario" />
		<Entry Text="{ Binding Senha, Mode=TwoWay }" Placeholder="Senha" />
		<Button Text="Entrar" Command="{ Binding Entrar }"></Button>
	</StackLayout>
</local:LoginView>
