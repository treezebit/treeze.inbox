<?xml version="1.0" encoding="UTF-8"?>
<local:LoginViewBase
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="InBox.LoginView"
	xmlns:local="clr-namespace:InBox;assembly=UsuarioViewModel">

	<StackLayout Spacing="10"
               VerticalOptions="CenterAndExpand"
               >
		<Label Text="{ Binding Mensagem }" />
		<Entry Text="{ Binding Login, Mode=TwoWay }" Placeholder="Usuario" />
		<Entry Text="{ Binding Senha, Mode=TwoWay }" Placeholder="Senha" />
		<Button Text="Entrar" Command="{ Binding Entrar }"></Button>
	</StackLayout>

</local:LoginViewBase>