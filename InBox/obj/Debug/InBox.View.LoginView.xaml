<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="InBox.LoginView" BackgroundColor="Black" xmlns:local="clr-namespace:InBox;assembly=InBox">
	<ContentPage.Content>
		<StackLayout>
			<AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
				<Grid Padding="20" AbsoluteLayout.LayoutBounds="1, 1, 1, 1" AbsoluteLayout.LayoutFlags="All">
	    			<StackLayout Spacing="10" VerticalOptions="FillAndExpand">
						<StackLayout Padding="20,40,20,20">
							<Image Source="Logo-Inbox.png" />
						</StackLayout>
						<Entry Text="{ Binding Login  }" Placeholder="Email" HeightRequest="60" IsEnabled="{ Binding IsEnable }" />
						<Entry Text="{ Binding Senha  }" Placeholder="Senha" HeightRequest="60" IsEnabled="{ Binding IsEnable }" IsPassword="true" />
						<Button Text="{ Binding SituacaoTexto }" Command="{ Binding Entrar }" TextColor="Black" BackgroundColor="#FCCD06" BorderColor="White">
						</Button>
					</StackLayout>
				</Grid>
				<ActivityIndicator Color="Black" IsRunning="true" AbsoluteLayout.LayoutBounds="1, 1, 1, 1" AbsoluteLayout.LayoutFlags="All" IsVisible="false" />
			</AbsoluteLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>